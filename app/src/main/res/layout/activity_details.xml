<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.callcentre.callcentre.DetailsActivity">

    <TextView
        android:id="@+id/totalProfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Total profit: 234"
        android:textStyle="bold"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/unusedOperators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Unused operators: 2"
        android:textStyle="bold"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/missedCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Missed calls: 234"
        android:textStyle="bold"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/missedProfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Missed profit: 234"
        android:textStyle="bold"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/profitForMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Profit for month: 234"
        android:textStyle="bold"
        android:layout_margin="16dp"/>

</LinearLayout>
